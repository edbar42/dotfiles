{{- $primary := "" -}}
{{- $secondary := "" -}}

{{- if eq .chezmoi.hostname "desktop" }}
{{-   $primary = "DP-1" }}
{{-   $secondary = "HDMI-A-2" }}
{{- else if eq .chezmoi.hostname "thinkpad" }}
{{-   $primary = "eDP-1" }}
{{-   $secondary = "HDMI-A-1" }}
{{- end -}}

# Generated by chezmoi on {{ .chezmoi.hostname }}

workspace=1,monitor:{{ $primary }},default:true
{{- range $i := untilStep 2 11 1 }}
workspace={{ $i }},monitor:{{ $primary }}
{{- end }}
{{- range $i := untilStep 11 21 1 }}
workspace={{ $i }},monitor:{{ $secondary }}
{{- end }}
